{
    "name": "chapter",
    "private": true,
    "version": "0.0.1",
    "type": "module",
    "scripts": {
        "dev": "vite dev",
        "build": "vite build",
        "prepare": "svelte-kit sync || echo ''",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "prettier --check .",
        "format": "prettier --write .",
        "spacetime:start": "spacetime start --data-dir=./data --listen-addr='127.0.0.1:3000'",
        "spacetime:generate": "spacetime generate --lang typescript --out-dir src/lib/module_bindings --module-path spacetimedb && prettier --write src/lib/module_bindings",
        "spacetime:publish:local": "spacetime publish --module-path spacetimedb --server local",
        "spacetime:publish": "spacetime publish --module-path spacetimedb --server maincloud"
    },
    "devDependencies": {
        "@internationalized/date": "^3.11.0",
        "@lucide/svelte": "^0.575.0",
        "@sveltejs/adapter-auto": "^7.0.0",
        "@sveltejs/kit": "^2.50.2",
        "@sveltejs/vite-plugin-svelte": "^6.2.4",
        "@tailwindcss/typography": "^0.5.19",
        "@tailwindcss/vite": "^4.1.18",
        "bits-ui": "^2.16.2",
        "clsx": "^2.1.1",
        "prettier": "^3.8.1",
        "prettier-plugin-svelte": "^3.4.1",
        "prettier-plugin-tailwindcss": "^0.7.2",
        "svelte": "^5.51.0",
        "svelte-check": "^4.3.6",
        "tailwind-merge": "^3.5.0",
        "tailwind-variants": "^3.2.2",
        "tailwindcss": "^4.1.18",
        "tw-animate-css": "^1.4.0",
        "typescript": "^5.9.3",
        "vite": "^7.3.1"
    },
    "dependencies": {
        "spacetimedb": "^2.0.2"
    }
}
